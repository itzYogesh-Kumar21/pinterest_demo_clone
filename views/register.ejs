<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1552083974-186346191183?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center bg-center bg-no-repeat bg-cover"
>
  <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">

    <h1
      class="text-2xl mb-10 tracking-tighter leading-none capitalize text-center font-semibold text-zinc-700"
    >
      Create new account
    </h1>

    <form action="/register" method="post">
      <input
        class="border-2 rounded-md block w-full mt-2 px-3 py-2"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="border-2 rounded-md block w-full mt-2 px-3 py-2"
        type="text"
        name="fullname"
        placeholder="Full name"
      />
      <input
        class="border-2 rounded-md block w-full mt-2 px-3 py-2"
        type="email"
        name="email"
        placeholder="email address"
      />
      <input
        class="border-2 rounded-md block w-full mt-2 px-3 py-2"
        type="number"
        name="contact"
        placeholder="contact number"
      />
      <input
        class="border-2 rounded-md block w-full mt-2 px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <input
        class="block w-full mt-5 px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Create New Account"
      />
      
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service and acknowledge
        you've read our Privacy Policy. Notice at collection.
      </p>
    </form>

    <a
      href="/"
      class="inline-block mt-7 w-full text-center text-sm font-semibold text-zinc-700"
      >Login Existing Account
    </a>

  </div>
</div>

<% include ./partials/footer.ejs %>
